class Solution {
public:
    int islandPerimeter(vector<vector<int>>& grid) {
        int rowSize=grid.size();
        int colSize=grid[0].size();
       int count=0,i,j;
        
        for(i=0;i<rowSize;i++){
            for(j=0;j<colSize;j++){
               if (grid[i][j]==1)
               {
                //check left column
                if( j==0 || grid[i][j-1]==0)
                count++;
                //check right column
                if (j==grid[i].size()-1 || grid[i][j+1]==0)
                 count++;
                // check top column
                if (i==0 || grid[i-1][j]==0)
                 count++;
                //check bottom column
                if (i==grid.size()-1 ||grid[i+1][j]==0)
                 count++;
               }
            }
        }
              return count;
    }
    
};
